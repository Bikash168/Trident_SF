{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",   // Keep JSX in its original form
    "incremental": true,
    "target": "es5",     // Target older browsers with ES5
    "baseUrl": ".",      // Set base URL for module resolution
    "paths": {
      "@/*": ["./*"]     // Map @/ to root directory
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
